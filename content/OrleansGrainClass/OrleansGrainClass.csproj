<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Thiago Loureiro</Authors>
    <Company>Thiago Loureiro</Company>
    <Copyright>Thiago Loureiro</Copyright>
    <PackageLicenseUrl>https://github.com/thiagoloureiro/OrleansGrainNetStandardProjectTemplate/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/thiagoloureiro/OrleansGrainNetStandardProjectTemplate</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/thiagoloureiro/OrleansSiloNetCoreProjectTemplate/master/logo.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/thiagoloureiro/OrleansGrainNetStandardProjectTemplate</RepositoryUrl>
    <PackageReleaseNotes>Orleans Grain .NET Standard Project Template</PackageReleaseNotes>
    <Description>Orleans Grain Host .NET Standard Project Template</Description>
    <PackageTags>orleans, silo, grain, dotnetcore</PackageTags>
    <PackageId>OrleansGrain.NetStandard.ProjectTemplate</PackageId>
    <Product>OrleansGrain.NetCore.ProjectTemplate</Product>
    <AssemblyName>OrleansGrainClass</AssemblyName>
    <AssemblyVersion>1.0.1.0</AssemblyVersion>
    <FileVersion>1.0.1.0</FileVersion>
    <Version>1.0.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Orleans.Core.Abstractions" Version="2.3.0" />
    <PackageReference Include="Microsoft.Orleans.OrleansCodeGenerator.Build" Version="2.3.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
